<style>
  #help-button {
    position: fixed;
    right: 20px;
    bottom: 20px;
    width: 50px;
    height: 50px;
    z-index: 100000;
  }
  #help-button img {
    width: 50px;
    height: 50px;
  }

  #zapire-box {
    position: absolute;
    left: 0px;
    top: 0px;
    width:100%;
    height:100%;
    text-align:center;
    z-index: 1000;
  }

  #zapire-box div {
    border-radius: 20px;
    -moz-border-radius: 20px;
    -webkit-border-radius: 20px;
    width:300px;
    height: 200px;
    margin: 100px auto;
    background-color: white;
    border:1px solid rgba(200,200,200,0.8);
    padding:15px;
    padding-top: 0px;
    text-align:center;
    box-shadow: 0px 1px 3px rgba(0,0,0,0.5);


    background-image: linear-gradient(bottom, rgb(235,235,235) 6%, rgb(240,240,240) 0%, rgb(255,255,255) 100%);
    background-image: -o-linear-gradient(bottom, rgb(235,235,235) 6%, rgb(240,240,240) 0%, rgb(255,255,255) 100%);
    background-image: -moz-linear-gradient(bottom, rgb(235,235,235) 6%, rgb(240,240,240) 0%, rgb(255,255,255) 100%);
    background-image: -webkit-linear-gradient(bottom, rgb(235,235,235) 6%, rgb(240,240,240) 0%, rgb(255,255,255) 100%);
    background-image: -ms-linear-gradient(bottom, rgb(235,235,235) 6%, rgb(240,240,240) 0%, rgb(255,255,255) 100%);

    background-image: -webkit-gradient(
      linear,
      left bottom,
      left top,
      color-stop(0.06, rgb(235,235,235)),
      color-stop(0, rgb(240,240,240)),
      color-stop(1, rgb(255,255,255))
    );

  }

  #zapire-box div div {
    border: 0px;
    display: none;
  }

  #zapire-box div input {
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    height: 20px;
    width: 100%;
    border:1px solid rgba(200,200,200,0.8);
    box-shadow: inset 0px 1px 3px rgba(0,0,0,0.5);
  }

  #zapire-box div h3 {
    color: rgba(100,100,100,1);
  }

</style>

<div id="help-button" onclick="$('#zapire-box').toggle();">
  <%= image_tag 'help.png' %>
</div>

<div id="zapire-box">
  <div>
    <h3>Ask a Question?</h3>
    <input type="text"></input>
  <div>
</div>